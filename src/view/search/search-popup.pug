.search-layer.hide-search-popup
  .search-popup
    .search-form
      .search-input
        s_search
          button#search-btn(onclick='[##_search_onclick_submit_##]')
            include ../icons/search-icon
          input#search-input(
            type='text',
            placeholder='검색할 내용을 입력해주세요',
            name='[##_search_name_##]',
            value='[##_search_text_##]',
            onkeypress='if (event.keyCode == 13) { [##_search_onclick_submit_##] }'
          )
      button#search-popup-close-btn.btn.btn-text
        include ../icons/x-icon
    s_sidebar
      s_sidebar_element
        <!-- 검색 태그 -->
        .search-tags
          .search-tags-title
            include ../icons/tags-icon
            h3 검색 태그
          .tags
            s_random_tags
              a.tag(href='[##_tag_link_##]', class='[##_tag_class_##]') [##_tag_name_##]
