<?xml version="1.0" encoding="utf-8"?>
<skin>
    <information>
        <name>Tistory Berry Skin ${{version}}</name>
        <version>${{version}}</version>
        <description>
            <![CDATA[${{description}}]]>
        </description>
        <license>
            <![CDATA[${{license}}]]>
        </license>
    </information>
    <author>
        <name><![CDATA[${{author}}]]></name>
        <homepage>${{homepage}}</homepage>
        <email>${{email}}</email>
    </author>
    <default>
        <recentEntries>5</recentEntries>
        <recentComments>5</recentComments>
        <recentTrackbacks>5</recentTrackbacks>
        <itemsOnGuestbook>10</itemsOnGuestbook>
        <tagsInCloud>30</tagsInCloud>
        <sortInCloud>3</sortInCloud>
        <expandComment>0</expandComment>
        <expandTrackback>0</expandTrackback>
        <lengthOfRecentNotice>25</lengthOfRecentNotice>
        <lengthOfRecentEntry>27</lengthOfRecentEntry>
        <lengthOfRecentComment>30</lengthOfRecentComment>
        <lengthOfRecentTrackback>30</lengthOfRecentTrackback>
        <lengthOfLink>30</lengthOfLink>
        <showListOnCategory>1</showListOnCategory>
        <showListOnArchive>1</showListOnArchive>
        <commentMessage>
            <none>댓글이 없습니다.</none>
            <single>댓글 &lt;span class="cnt"&gt;하나&lt;/span&gt; 달렸습니다.</single>
        </commentMessage>
        <trackbackMessage>
            <none>받은 트랙백이 없고</none>
            <single>트랙백이 &lt;span class="cnt"&gt;하나&lt;/span&gt;이고</single>
        </trackbackMessage>
        <tree>
            <color>000000</color>
            <bgColor>ffffff</bgColor>
            <activeColor>000000</activeColor>
            <activeBgColor>eeeeee</activeBgColor>
            <labelLength>27</labelLength>
            <showValue>1</showValue>
        </tree>
        <contentWidth>500</contentWidth>
    </default>
    <!-- Legacy -->
    <liststyle>
        <item>
            <label>기본 타입</label>
            <value>thumbnail</value>
        </item>
    </liststyle>
    <!-- Cover -->
    <cover>
        <item>
            <name>thumbnail</name>
            <label>
                <![CDATA[ 기본 타입 ]]>
            </label>
            <description>
                <![CDATA[ 이미지 썸네일과 제목, 본문으로 구성된 리스트 ]]>
            </description>
        </item>
    </cover>
    <!-- Variable -->
    <variables>
        <variablegroup name="고급 설정">
            <variable>
                <name>font-style</name>
                <label>
                    <![CDATA[ 폰트 변경 ]]>
                </label>
                <description>
                    <![CDATA[ 폰트를 변경합니다. ]]>
                </description>
                <type>SELECT</type>
                <option>
                    <![CDATA[
                    [
                        {
                            "name":"noto-sans",
                            "label":"Noto Sans",
                            "value":"font-noto-sans"
                        },
                        {
                            "name":"NotoSerifKR",
                            "label":"본명조",
                            "value":"font-noto-serif-kr"
                        },
                        {
                            "name":"gmarket-sans",
                            "label":"Gmarket Sans",
                            "value":"font-gmarket-sans"
                        },
                        {
                            "name":"NanumBarunGothic",
                            "label":"나눔바른고딕",
                            "value":"font-nanum-barun-gothic"
                        },
                        {
                            "name":"MaruBuri",
                            "label":"마루 부리",
                            "value":"font-maru-buri-regular"
                        },
                        {
                            "name":"Cafe24Oneprettynight",
                            "label":"카페24 고운밤",
                            "value":"font-cafe24-one-pretty-night"
                        },
                        {
                            "name":"cafe24Ohsquareair",
                            "label":"카페24 아네모네 에어",
                            "value":"font-cafe24-ohsquare-air"
                        }
                    ]
                    ]]>
                </option>
                <default><![CDATA[ noto-sans ]]></default>
            </variable>
            <variable>
                <name>loading-visible</name>
                <label>
                    <![CDATA[ 로딩 보이기/숨기기 ]]>
                </label>
                <description>
                    <![CDATA[ 로딩화면을 보이게 하거나 숨깁니다. ]]>
                </description>
                <type>BOOL</type>
                <option />
                <default>false</default>
            </variable>
            <variable>
                <name>dark-theme-on-off</name>
                <label>
                    <![CDATA[ 다크 테마 변경 기능 활성화 ]]>
                </label>
                <description>
                    <![CDATA[ 다크 테마 변경 기능을 활성화합니다. ]]>
                </description>
                <type>BOOL</type>
                <option />
                <default>true</default>
            </variable>
        </variablegroup>
        <!-- Profile -->
        <variablegroup name="프로필 설정">
            <variable>
                <name>profile-image-visible</name>
                <label>
                    <![CDATA[ 블로그 사진 보이기/숨기기 ]]>
                </label>
                <description>
                    <![CDATA[ 블로그의 사진을 보이게 하거나 숨깁니다. ]]>
                </description>
                <type>BOOL</type>
                <option />
                <default>true</default>
            </variable>
            <variable>
                <name>profile-blogger-visible</name>
                <label>
                    <![CDATA[ 블로거명 보이기/숨기기 ]]>
                </label>
                <description>
                    <![CDATA[ 블로거의 이름을 보이게 하거나 숨깁니다. ]]>
                </description>
                <type>BOOL</type>
                <option />
                <default>true</default>
            </variable>
            <variable>
                <name>profile-blog-desc-visible</name>
                <label>
                    <![CDATA[ 블로그 설명 보이기/숨기기 ]]>
                </label>
                <description>
                    <![CDATA[ 블로그의 설명을 보이게 하거나 숨깁니다. ]]>
                </description>
                <type>BOOL</type>
                <option />
                <default>true</default>
            </variable>
        </variablegroup>
        <!-- Board -->
        <variablegroup name="본문 설정">
            <variable>
                <name>board-thumbnail-shape</name>
                <label>글 썸네일 모양</label>
                <description>글 썸네일의 모양을 선택할 수 있습니다.</description>
                <type>SELECT</type>
                <option>
                    <![CDATA[
                    [
                        {
                            "name":"article-thumbnail-shape-default",
                            "label":"둥근사각형",
                            "value":"article-thumbnail-shape-default"
                        },
                        {
                            "name":"article-thumbnail-shape-rectangle",
                            "label":"사각형",
                            "value":"article-thumbnail-shape-rectangle"
                        },
                        {
                            "name":"article-thumbnail-shape-circle",
                            "label":"원형",
                            "value":"article-thumbnail-shape-circle"
                        }
                    ]
                    ]]>
                </option>
                <default><![CDATA[ article-thumbnail-shape-default ]]></default>
            </variable>
        </variablegroup>
        <!-- Footer Link -->
        <variablegroup name="Footer SNS 링크 설정">
            <variable>
                <name>footer-sns-twitter</name>
                <label>
                    <![CDATA[ Twitter URL ]]>
                </label>
                <description>
                    <![CDATA[ Footer 에 위치한 Twitter SNS 링크 ]]>
                </description>
                <type>STRING</type>
                <option />
                <default />
            </variable>
            <variable>
                <name>footer-sns-youtube</name>
                <label>
                    <![CDATA[ Youtube URL ]]>
                </label>
                <description>
                    <![CDATA[ Footer 에 위치한 Youtube SNS 링크 ]]>
                </description>
                <type>STRING</type>
                <option />
                <default />
            </variable>
            <variable>
                <name>footer-sns-linkedin</name>
                <label>
                    <![CDATA[ LinkedIn URL ]]>
                </label>
                <description>
                    <![CDATA[ Footer 에 위치한 LinkedIn SNS 링크 ]]>
                </description>
                <type>STRING</type>
                <option />
                <default />
            </variable>
            <variable>
                <name>footer-sns-github</name>
                <label>
                    <![CDATA[ GitHub URL ]]>
                </label>
                <description>
                    <![CDATA[ Footer 에 위치한 GitHub SNS 링크 ]]>
                </description>
                <type>STRING</type>
                <option />
                <default />
            </variable>
            <variable>
                <name>footer-sns-discord</name>
                <label>
                    <![CDATA[ Discord URL ]]>
                </label>
                <description>
                    <![CDATA[ Footer 에 위치한 Discord SNS 링크 ]]>
                </description>
                <type>STRING</type>
                <option />
                <default />
            </variable>
        </variablegroup>
        <variablegroup name="Footer 커스텀 링크 설정">
            <variable>
                <name>footer-custom-1-label</name>
                <label>
                    <![CDATA[ [Custom 1] Label ]]>
                </label>
                <description>
                    <![CDATA[ Footer 에 위치한 Custom 1 Label ]]>
                </description>
                <type>STRING</type>
                <option />
                <default />
            </variable>
            <variable>
                <name>footer-custom-1-url</name>
                <label>
                    <![CDATA[ [Custom 1] URL ]]>
                </label>
                <description>
                    <![CDATA[ Footer 에 위치한 Custom 1 URL ]]>
                </description>
                <type>STRING</type>
                <option />
                <default />
            </variable>
            <variable>
                <name>footer-custom-2-label</name>
                <label>
                    <![CDATA[ [Custom 2] Label ]]>
                </label>
                <description>
                    <![CDATA[ Footer 에 위치한 Custom 2 Label ]]>
                </description>
                <type>STRING</type>
                <option />
                <default />
            </variable>
            <variable>
                <name>footer-custom-2-url</name>
                <label>
                    <![CDATA[ [Custom 2] URL ]]>
                </label>
                <description>
                    <![CDATA[ Footer 에 위치한 Custom 2 URL ]]>
                </description>
                <type>STRING</type>
                <option />
                <default />
            </variable>
            <variable>
                <name>footer-custom-3-label</name>
                <label>
                    <![CDATA[ [Custom 3] Label ]]>
                </label>
                <description>
                    <![CDATA[ Footer 에 위치한 Custom 3 Label ]]>
                </description>
                <type>STRING</type>
                <option />
                <default />
            </variable>
            <variable>
                <name>footer-custom-3-url</name>
                <label>
                    <![CDATA[ [Custom 3] URL ]]>
                </label>
                <description>
                    <![CDATA[ Footer 에 위치한 Custom 3 URL ]]>
                </description>
                <type>STRING</type>
                <option />
                <default />
            </variable>
        </variablegroup>
    </variables>
</skin>